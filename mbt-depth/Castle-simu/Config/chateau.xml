<?xml version="1.0"?>
<conf>
  <ecm>
    <mask>
      <size>5</size>
      <nb_mask>180</nb_mask>
    </mask>
    <range>
      <tracking>8</tracking>
    </range>
    <contrast>
      <edge_threshold>10000</edge_threshold>
      <mu1>0.5</mu1>
      <mu2>0.5</mu2>
    </contrast>
  </ecm>
  <sample>
    <step>5</step>
  </sample>
  <klt>
    <mask_border>5</mask_border>
    <max_features>10000</max_features>
    <window_size>5</window_size>
    <quality>0.01</quality>
    <min_distance>5</min_distance>
    <harris>0.02</harris>
    <size_block>3</size_block>
    <pyramid_lvl>3</pyramid_lvl>
  </klt>
  <camera>
    <px>700</px>
    <py>700</py>
    <u0>320</u0>
    <v0>240</v0>
  </camera>
  <face>
    <angle_appear>85</angle_appear>
    <angle_disappear>89</angle_disappear>
    <near_clipping>0.01</near_clipping>
    <far_clipping>2</far_clipping>
    <fov_clipping>1</fov_clipping>
  </face>
</conf>
